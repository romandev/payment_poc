<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="mockspay.android.samsung.com.mocksamsungpay.PaymentActivity"
    android:gravity="center">

        <ImageButton
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:id="@+id/samsung_pay_button"
            android:src="@drawable/samsung_pay_icon"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:layout_above="@+id/paypal_button"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:id="@+id/google_wallet_button"
            android:src="@drawable/google_wallet_icon"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:layout_below="@+id/paypal_button"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp" />

        <ImageButton
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:id="@+id/paypal_button"
            android:src="@drawable/paypal_icon"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="0dp" />
    </LinearLayout>
